{% extends 'base.html.twig' %}

{% block title %}Weather in {{location.city}}, {{location.country}}{% endblock%}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1> {{location.city}}, {{location.country}}</h1>
    <ul>
        {% for measurement in measurements %}

        <li>{{measurement.date|date('d.m.Y') }}: {{measurement.celsius}} &deg;C :  {{measurement.atmosferic_pressure}} hPa, Rain Chance - {{measurement.rain_drop}}%</li>
        {% endfor %}
    </ul>
</div>

<div class="example-wrapper">
    <h1> {{location.city}}, {{location.country}}</h1>
    <h3> Pomiary gdzie ciśnienie atmosferyczne jest mniejsze niż 1000 hPa </h3>
    <ul>
        {% for measurement in filtered %}

        <li> {{measurement.date|date('d.m.Y') }}: {{measurement.celsius}} &deg;C :  {{measurement.atmosferic_pressure}} hPa, Rain Chance - {{measurement.rain_drop}}%</li>
        {% endfor %}
    </ul>
</div>
{% endblock %}
